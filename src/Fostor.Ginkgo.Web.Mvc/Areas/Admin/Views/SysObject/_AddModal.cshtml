@using Fostor.Ginkgo.Web.Models.Common.Modals
@using System.Collections.Generic
@using Fostor.Ginkgo
@model Fostor.Ginkgo.Web.Areas.Admin.Models.SysObjectViewModel
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
    ViewBag.ModalTitle = L("AddSysObject");
}
<form name="SysObjectCreateForm" role="form" novalidate class="form-validation form-horizontal">
    <div>
        <div class="form-group">
            <label class="col-md-2 control-label">@L("ParentKey")</label>
            <div class="col-md-10">
                <div class="form-line">
                    <input class="form-control" type="text" name="ParentKey" maxlength="200" value="@(ViewBag.ParentKey??"")" readonly>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@L("ObjectKey")<span style="color:red;">*</span></label>
            <div class="col-md-10">
                <div class="form-line">
                    <input class="form-control" type="text" name="ObjectKey" maxlength="255" value="@((ViewBag.ParentKey??"")!=""? ViewBag.ParentKey +"." : "")" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@L("Uri")</label>
            <div class="col-md-10">
                <div class="form-line">
                    <input class="form-control" type="text" name="Uri" maxlength="255">
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">@L("DisplayName")<span style="color:red;">*</span></label>
            <div class="col-md-4">
                <div class="form-line">
                    <input class="form-control" type="text" name="DisplayName" maxlength="30" required>
                </div>
            </div>
            <label class="col-md-2 control-label">@L("Icon")</label>
            <div class="col-md-4">
                <div class="form-line">
                    <input class="form-control" type="text" name="Icon" maxlength="30">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                <div class="checkbox">
                    <input type="checkbox" name="IsEnable" value="false" class="filled-in" id="IsEnable" checked />
                    <label for="IsEnable">@L("IsEnable") </label>
                </div>
            </div>
            <div class="col-md-2">
                <div class="checkbox">
                    <input type="checkbox" name="IsMenuItem" value="false" class="filled-in" id="IsMenuItem" checked />
                    <label for="IsMenuItem">@L("IsMenuItem") </label>
                </div>
            </div>
            <label class="col-md-2 control-label">@L("MenuLevel") </label>
            <div class="col-md-2">
                <div class="form-line">
                    <input class="form-control" type="number" name="MenuLevel">
                </div>
            </div>
            <label class="col-md-2 control-label">@L("SortCode") </label>
            <div class="col-md-2">
                <div class="form-line">
                    <input class="form-control" type="number" name="SortCode">
                </div>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-sm-12">
            <h4>@L("Permissions")</h4>
            @foreach (var permission in Model.AllPermissions)
            {
                <div class="col-sm-3">
                    <input type="checkbox" name="permission" value="false" data-permission-name="@permission.PermissionName" data-display-name="@permission.DisplayName" class="filled-in" id="@string.Format("permission{0}",permission.PermissionName)" />
                    <label for="@string.Format("permission{0}",permission.PermissionName)">@permission.DisplayName</label>
                </div>
            }
        </div>
    </div>
</form>
@section modalfooter
    {
    <button type="button" class="btn btn-primary save-button waves-effect">@L("Save")</button>
}
<script src="~/view-resources/Admin/SysObject/_AddModal.js" asp-append-version="true"></script>








