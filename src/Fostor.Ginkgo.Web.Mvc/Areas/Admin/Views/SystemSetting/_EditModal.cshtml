@using Fostor.Ginkgo.Web.Models.Common.Modals
@using System.Collections.Generic
@model Fostor.Ginkgo.Web.Areas.Admin.Models.SystemSettingViewModel
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
    ViewBag.ModalTitle = L("EditSystemSetting");
}
<form name="SystemSettingEditForm" role="form" novalidate class="form-validation form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">@L("SettingName")<span style="color:red;">*</span></label>
        <div class="col-md-10">
            <div class="form-line">
                <input class="form-control" type="text" name="Name" maxlength="256" value="@Model.Name" readonly>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@L("SettingValue")</label>
        <div class="col-md-10">
            <div class="form-line">
                <input class="form-control" type="text" name="Value" maxlength="2000" value="@Model.Value">
            </div>
        </div>
    </div>
</form>
@section modalfooter
    {
    <button type="button" class="btn btn-primary save-button waves-effect">@L("Save")</button>
}
<script src="~/view-resources/Admin/SystemSetting/_EditModal.js" asp-append-version="true"></script>






