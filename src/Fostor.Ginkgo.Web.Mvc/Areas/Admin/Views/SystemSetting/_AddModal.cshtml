@using Fostor.Ginkgo.Web.Models.Common.Modals
@using System.Collections.Generic
@using Fostor.Ginkgo
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
    ViewBag.ModalTitle = L("AddSystemSetting");
}
<form name="SystemSettingCreateForm" role="form" novalidate class="form-validation form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label">@L("SettingName")<span style="color:red;">*</span></label>
        <div class="col-md-10">
            <div class="form-line">
                <input class="form-control" type="text" name="Name" maxlength="256" required>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@L("SettingValue")</label>
        <div class="col-md-10">
            <div class="form-line">
                <input class="form-control" type="text" name="Value" maxlength="2000" >
            </div>
        </div>
    </div>
</form>
@section modalfooter
    {
    <button type="button" class="btn btn-primary save-button waves-effect">@L("Save")</button>
}
<script src="~/view-resources/Admin/SystemSetting/_AddModal.js" asp-append-version="true"></script>









