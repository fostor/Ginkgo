@using Fostor.Ginkgo.Web.Startup
@using Fostor.Ginkgo.Web.Views.Shared.Components.MaterialDatePicker
@{
    ViewData["Title"] = "TaskRoleList";
    ViewBag.CurrentPageName = "TaskFlow.TaskRole"; //The menu item will be active for this page.
}
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/TaskFlow/Flow/RoleList.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/view-resources/TaskFlow/Flow/RoleList.min.js" asp-append-version="true"></script>
    </environment>
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("TaskRoleList")
                </h2>

                <form name="SearchForm" role="form" novalidate class="form-validation form-horizontal">
                    <div class="form-group">
                        <label class="col-md-2 control-label">@L("RoleCode")</label>
                        <div class="col-md-2">
                            <div class="form-line">
                                <input type="text" name="RoleCode" class="form-control" maxlength="20">
                            </div>
                        </div>
                        <label class="col-md-2 control-label">@L("RoleName")</label>
                        <div class="col-md-2">
                            <div class="form-line">
                                <input type="text" name="RoleName" class="form-control" maxlength="30">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button type="button" id="btnSearch" class="btn btn-primary waves-effect btn-xs" style="margin-left:20px;"><i class="small material-icons">search</i></button>
                        </div>
                        <button type="button" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right add-task-role" data-toggle="modal" data-target="#TaskRoleCreateModal">
                            <i class="material-icons">add</i>
                        </button>
                    </div>
                </form>
            </div>            
            <div class="m-l-15 m-r-15">
                <table id="table_100" class="table table-condensed table-bordered" style="min-width:100%;">
                    <thead>
                        <tr>
                            <th>@L("RoleCode")</th>
                            <th>@L("RoleName")</th>
                            <th>@L("View")</th>
                            <th>@L("Delete")</th>
                            <th>@L("LastModifier")</th>
                            <th>@L("LastModificationTime")</th>
                            <th>@L("Creator")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>@L("RoleCode")</th>
                            <th>@L("RoleName")</th>
                            <th>@L("View")</th>
                            <th>@L("Delete")</th>
                            <th>@L("LastModifier")</th>
                            <th>@L("LastModificationTime")</th>
                            <th>@L("Creator")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="TaskRoleCreateModal" tabindex="-1" role="dialog" aria-labelledby="TaskRoleCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width:600px;height:350px;">
        <div class="modal-content">

        </div>
    </div>
</div>
<div class="modal fade" id="TaskRoleEditModal" tabindex="-1" role="dialog" aria-labelledby="TaskRoleEditModalLabel" data-backdrop="static">
    <div class="modal-dialog" role="document" style="width:960px;height:550px;">
        <div class="modal-content">

        </div>
    </div>
</div>


