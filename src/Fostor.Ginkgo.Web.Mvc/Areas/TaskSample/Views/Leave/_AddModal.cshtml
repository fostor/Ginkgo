@using Fostor.Ginkgo.Web.Models.Common.Modals
@using System.Collections.Generic
@using Fostor.Ginkgo
@using Fostor.Ginkgo.Web.Views.Shared.Components.DataConfigSelector
@using Fostor.Ginkgo.Web.Views.Shared.Components.MaterialDatePicker
@{
    Layout = "~/Views/Shared/_Modal.cshtml";
    ViewBag.ModalTitle = L("AddLeave");
}
<link href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
<form name="LeaveCreateForm" role="form" novalidate class="form-validation form-horizontal">
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("AppliNumber")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                <div class="form-line">
                    <input class="form-control" type="text" name="AppliNumber" maxlength="20" readonly>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("Applicant")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                <div class="form-line">
                    <input class="form-control" type="text" name="Applicant" maxlength="30" value="@ViewBag.Applicant" required>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("Title")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                <div class="form-line">
                    <input class="form-control" type="text" name="Title" maxlength="50" required>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("LeaveType")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                @await Component.InvokeAsync(typeof(DataConfigSelectorViewComponent), new { configCode = "LeaveType", tagName = "LeaveType", selectedValue = "", required = "1" })
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-group">
            <label class="col-md-2 control-label">@L("Description")</label>
            <div class="col-md-10">
                <div class="form-line">
                    <input class="form-control" type="text" name="Description" maxlength="500">
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("FromTime")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                @await Component.InvokeAsync(typeof(MaterialDatePickerViewComponent), new { tagName = "FromTime", showTime = "1", required = "1" })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("To")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                @await Component.InvokeAsync(typeof(MaterialDatePickerViewComponent), new { tagName = "EndTime", showTime = "1", required = "1" })
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("TotalHours")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                <div class="form-line">
                    <input class="form-control" type="number" name="TotalHours" required>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="col-md-4 control-label">@L("Status")<span style="color:red;">*</span></label>
            <div class="col-md-8">
                @await Component.InvokeAsync(typeof(DataConfigSelectorViewComponent), new { configCode = "LeaveAppliStatus", tagName = "Status", selectedValue = "1", disabled = "1" })
            </div>
        </div>
    </div>
</form>
@section modalfooter
    {
    <button type="button" class="btn btn-primary save-button waves-effect">@L("Save")</button>
}
<script src="~/view-resources/TaskSample/Leave/_AddModal.js" asp-append-version="true"></script>
