@using Fostor.Ginkgo.Web.Resources
@inject IWebResourceManager WebResourceManager
@{
    WebResourceManager.AddScript(ApplicationPath + "lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js");
    WebResourceManager.AddScript(ApplicationPath + "lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.zh-CN.min.js");
    WebResourceManager.AddScript(ApplicationPath + "view-resources/Views/Shared/Components/DatePicker/Default.js");

}
@model Fostor.Ginkgo.Web.Views.Shared.Components.DatePicker.DatePickerViewModel

<link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker3.min.css" rel="stylesheet" />

<div class="input-group date datepicker-component" >
    <div class="form-line">
        <input type="text" class="form-control" name="@Model.TagName" value="@Model.Value" @(Model.IsDisabled ? "disabled" : "") @(Model.IsRequired == true ? "required" : "")>
    </div>
    <span class="input-group-addon col-teal"><i class="glyphicon glyphicon-calendar"></i></span>
</div>

