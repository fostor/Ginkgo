@using Abp.MultiTenancy
@using Fostor.Ginkgo.Web.Models.Common.Modals
@using Fostor.Ginkgo.Web.Views.Shared.Components.TenantChange
@model ChangeModalViewModel
@{
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title">
        <span>@Html.Raw(L("ChangeTenant"))</span>
    </h4>
</div>
<div class="modal-body">
    <form name="TenantChangeForm" role="form" novalidate class="form-validation">
        <div class="form-group form-float">
            <div class="form-line">
                @*<input class="form-control" type="text" name="TenancyName" maxlength="@AbpTenantBase.MaxTenancyNameLength" value="@Model.TenancyName">
                    <label class="form-label">@L("TenancyName")</label>*@
                <select class="form-control show-tick" name="TenancyName">
                    @foreach (var s in Model.Tenants)
                    {
                        if (s.TenancyName == Model.TenancyName)
                        {
                            <option value="@s.TenancyName" selected>@s.Name</option>
                        }
                        else
                        {
                            <option value="@s.TenancyName">@s.Name</option>
                        }
                    }              
                </select>
            </div>
        </div>
        @*<span class="help-block">@L("LeaveEmptyToSwitchToHost")</span>*@
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/Shared/Components/TenantChange/_ChangeModal.js" asp-append-version="true"></script>