@using Fostor.Ginkgo.Web.Resources
@inject IWebResourceManager WebResourceManager
@{
    WebResourceManager.AddScript(ApplicationPath + "lib/bootstrap-select/dist/js/bootstrap-select.min.js");
}
@model Fostor.Ginkgo.Web.Views.Shared.Components.PeriodSelector.PeriodSelectorViewModel
<!-- Bootstrap Select -->
<link href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
<select class="form-control bootstrap-select show-tick" name="@Model.TagName" data-live-search="true" required>
    <option value="">--select--</option>
    @foreach (var s in Model.Periods)
    {
        if (s == Model.SelectedValue)
        {
            <option value="@s" selected>@s</option>
        }
        else
        {
            <option value="@s">@s</option>
        }
    }
</select>
